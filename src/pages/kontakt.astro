---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Kontakt – AIDMED | Wydział MiNI PW"
  description="Dane kontaktowe grupy badawczej AIDMED – adres, e-mail, lokalizacja na Wydziale MiNI PW."
  lang="pl"
  alternateHref="/en/contact"
  altLang="en"
>
  <Header lang="pl" alternateHref="/en/contact" currentPath={Astro.url.pathname} />

  <main class="flex-1">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 py-10">
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-grafitowy mb-2">Kontakt</h1>
      </header>

      <div class="grid sm:grid-cols-2 gap-8 mb-10">
        <div>
          <h2 class="text-lg font-semibold text-grafitowy mb-3">Adres</h2>
          <address class="not-italic text-gray-700 leading-relaxed text-sm">
            <p class="font-medium">Wydział Matematyki i Nauk Informacyjnych</p>
            <p>Politechnika Warszawska</p>
            <p>ul. Koszykowa 75</p>
            <p>00-662 Warszawa</p>
            <p class="mt-2 text-gray-500">Budynek 5, pok. 556</p>
          </address>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-grafitowy mb-3">Dane kontaktowe</h2>
          <dl class="space-y-3 text-sm">
            <div>
              <dt class="font-medium text-gray-500 text-xs uppercase tracking-wide">E-mail</dt>
              <dd>
                <a href="mailto:aidmed.mini@pw.edu.pl" class="text-szafirowy hover:underline">
                  aidmed.mini@pw.edu.pl
                </a>
              </dd>
            </div>
            <div>
              <dt class="font-medium text-gray-500 text-xs uppercase tracking-wide">Strona www</dt>
              <dd>
                <a href="http://aidmed.pl" class="text-szafirowy hover:underline" target="_blank" rel="noopener noreferrer">
                  aidmed.pl
                </a>
              </dd>
            </div>
            <div>
              <dt class="font-medium text-gray-500 text-xs uppercase tracking-wide">Wydział MiNI</dt>
              <dd>
                <a href="https://www.mini.pw.edu.pl" class="text-szafirowy hover:underline" target="_blank" rel="noopener noreferrer">
                  mini.pw.edu.pl
                </a>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Map embed -->
      <div class="rounded-lg overflow-hidden border border-gray-200 mb-8">
        <iframe
          title="Lokalizacja Wydziału MiNI PW"
          src="https://www.openstreetmap.org/export/embed.html?bbox=21.006,52.218,21.018,52.226&layer=mapnik&marker=52.2216,21.0117"
          width="100%"
          height="300"
          style="border: 0;"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>

      <p class="text-sm text-gray-500">
        Dojazd: Metro linia M1, stacja Politechnika; linie tramwajowe: 7, 9, 24, 25, 26; linie autobusowe: 107, 171, 175, 190.
      </p>
    </div>
  </main>

  <Footer lang="pl" />
</Layout>
