---
interface Props {
  lang: 'pl' | 'en';
}
const { lang } = Astro.props;
const isEn = lang === 'en';
---

<footer class="border-t border-gray-200 mt-auto bg-surface">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 py-8">
    <div class="grid sm:grid-cols-2 gap-6 text-sm text-gray-600">
      <div>
        <p class="font-semibold text-grafitowy mb-2">AIDMED</p>
        <p>
          {isEn
            ? 'Faculty of Mathematics and Information Sciences'
            : 'Wydział Matematyki i Nauk Informacyjnych'}
        </p>
        <p>
          {isEn
            ? 'Warsaw University of Technology'
            : 'Politechnika Warszawska'}
        </p>
        <p>ul. Koszykowa 75, 00-662 {isEn ? 'Warsaw, Poland' : 'Warszawa'}</p>
      </div>
      <div>
        <p class="font-semibold text-grafitowy mb-2">
          {isEn ? 'Contact' : 'Kontakt'}
        </p>
        <p>
          <a href="mailto:aidmed.mini@pw.edu.pl" class="text-szafirowy hover:underline">
            aidmed.mini@pw.edu.pl
          </a>
        </p>
        <p class="mt-1">
          <a href="http://aidmed.pl" class="text-szafirowy hover:underline" target="_blank" rel="noopener noreferrer">
            aidmed.pl
          </a>
        </p>
      </div>
    </div>
    <div class="mt-6 pt-4 border-t border-gray-200 text-xs text-gray-400">
      © 2006–2025 AIDMED, {isEn ? 'Faculty MiNI, Warsaw University of Technology' : 'Wydział MiNI, Politechnika Warszawska'}
    </div>
  </div>
</footer>
