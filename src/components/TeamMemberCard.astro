---
import type { CollectionEntry } from 'astro:content';

interface Props {
  member: CollectionEntry<'team'>;
  lang: 'pl' | 'en';
}

const { member, lang } = Astro.props;
const { data } = member;
const isEn = lang === 'en';

const role = isEn ? data.role : (data.role_pl ?? data.role);
const affiliation = isEn ? data.affiliation_en : data.affiliation_pl;
const researchLabel = isEn ? 'Research areas' : 'Obszary bada≈Ñ';
const picture = data.picture ?? '/images/team/placeholder.svg';
---

<article class="bg-surface rounded-lg p-5 border border-gray-100">
  <div class="flex gap-4 items-start">
    <img
      src={picture}
      alt={data.name}
      width="56"
      height="56"
      class="w-14 h-14 rounded-full object-cover shrink-0 bg-gray-200"
    />
    <div class="min-w-0">
      <h3 class="font-semibold text-grafitowy">{data.name}</h3>
      <p class="text-sm text-szafirowy mt-0.5">{role}</p>
      {affiliation && (
        <p class="text-xs text-gray-500 mt-1">{affiliation}</p>
      )}
    </div>
  </div>

  {data.research_areas && data.research_areas.length > 0 && (
    <div class="mt-3">
      <p class="text-xs font-medium text-gray-500 mb-1">{researchLabel}</p>
      <ul class="flex flex-wrap gap-1">
        {data.research_areas.map((area) => (
          <li class="text-xs bg-white border border-gray-200 rounded px-2 py-0.5 text-gray-600">
            {area}
          </li>
        ))}
      </ul>
    </div>
  )}

  {data.email && (
    <p class="mt-3 text-xs text-gray-500">
      <span class="font-medium">{isEn ? 'Email:' : 'E-mail:'}</span>{' '}
      <a href={`mailto:${data.email}`} class="text-szafirowy hover:underline">
        {data.email}
      </a>
    </p>
  )}

  {(data.linkedin || data.github) && (
    <div class="mt-2 flex items-center gap-2">
      {data.linkedin && (
        <a
          href={data.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          title="LinkedIn"
          class="text-gray-400 hover:text-szafirowy transition-colors"
          aria-label={`${data.name} on LinkedIn`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
      {data.github && (
        <a
          href={data.github}
          target="_blank"
          rel="noopener noreferrer"
          title="GitHub"
          class="text-gray-400 hover:text-grafitowy transition-colors"
          aria-label={`${data.name} on GitHub`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
    </div>
  )}
</article>
